<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="TimeTracker.Views.Projects.CreateProjectPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <Grid BackgroundColor="#CAD2C5" x:Name="MainGrid">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Grid>
                <Label
                    FontFamily="SoyuzGrotesk"
                    FontSize="28"
                    Grid.Row="0"
                    Margin="10,0"
                    Text="project creating"
                    TextColor="#52796F"
                    TextType="Text"
                    VerticalTextAlignment="Center" />
            </Grid>

            <Grid Grid.Row="1">
                <VerticalStackLayout>
                    <Label Text="Project Name" />
                    <Entry Text="{Binding ProjectName}" />

                    <Label Text="Project Description" />
                    <Editor Text="{Binding ProjectDescription}" />

                    <Button Command="{Binding CreateProjectCommand}" Text="Create" />
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>